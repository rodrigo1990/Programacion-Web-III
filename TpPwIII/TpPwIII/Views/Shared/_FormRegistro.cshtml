@model TpPwIII.Usuario
@using reCAPTCHA.MVC
@{
    ViewBag.Title = "_FormRegistro";
}

@using (Html.BeginForm("registrarUsuario", "Usuario", FormMethod.Post))
{
    @Html.AntiForgeryToken()



    <!--<form class="" action="/Usuario/registrarUsuario" method="POST" id="registrar-usuario-form">-->
    <div class="form-group">

        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control input-center", @placeholder = "Ingrese su nombre" } })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control input-center", @placeholder = "Ingrese su apellido" } })
        @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control input-center", @placeholder = "Ingrese su Email" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })                                          <div class="form-error" id="email-error">ejemplo@email.com</div>
    </div>

    <div class="form-group">
        @Html.PasswordFor(model => model.Contrasenia, new { @class = "form-control input-center", @placeholder = "Ej: Carlo20010" })
        @Html.ValidationMessageFor(model => model.Contrasenia, "", new { @class = "text-danger" })
        <div class="form-error" id="pass-error">MAX : 20 caracteres ,mayuscula y numero obligatorio</div>
    </div>

    <div class="form-group">
        @Html.PasswordFor(model => model.ConfirmPass, new { @class = "form-control input-center", @placeholder = "Repita su contraseña" })

        @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "text-danger" })
        <div class="form-error" id="pass-confirm-error">Ambas contraseñas no coinciden</div>
    </div>
    <div id="capatcha">


        @Html.Recaptcha(publicKey: "6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI", theme: CaptchaTheme.Dark, type: CaptchaType.Image)
        @Html.ValidationMessage("ReCaptcha")
        <h5 id="captcha-error" style="display:none;" class="text-danger">Valide el captcha</h5>

        <!--<div class="g-recaptcha" data-sitekey="6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI" style="margin-left:auto;margin-right:auto;display:block;"></div>-->
    </div>
    <div class="form-error" id="captcha-error">Valide el captcha</div>

    <button class="btn btn-primary button-form-modal" onclick="validarCaptcha()">Registrar usuario</button>

    <br />
    <div class="text-center">
        <a class="ir-slide-2">
            <h5>Volver a login</h5>
        </a>
    </div>

    <!--</form>-->
}

