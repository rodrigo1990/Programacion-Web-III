@model TpPwIII.Carpeta
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<h2>Crear carpeta</h2>

@using (Html.BeginForm("Crear", "Carpeta", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control input-center", @placeholder = "Ingrese nombre" } })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })

    </div>
    <div class="form-group text-center">
        @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control input-center", @placeholder = "Ej: Carlo20010" })
        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        <br />
        <button class="btn btn-primary button-form-modal">Crear carpeta</button>

    </div>



}
